<div class="usatodayheadline">
	<h1>
		<%= @keyword.upcase %> </h1>

		<% if current_user %>
		<%= form_for :search do |f| %>
			<%= f.hidden_field :keyword, value: @keyword %>
			<%= f.submit %>
			<% end %>
		<% else %>
		<p> Please sign in to save, you nerd. </p>
		<% end %>




</div>
<p>
	Headlines from USA Today: </br>
	<div class="usatodayheadline"><%= @usatoday["title"] %> </div>
	<br>
	
	<%= link_to @usatoday["description"], @usatoday["link"] %>

	<%#=@usatoday %>
</p>

